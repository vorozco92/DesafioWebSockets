<div>
    <h2>Listado de Productos</h2>
    <table>
        <tr>
            <th>ID</th>
            <th>Titulo</th>
            <th>Descripción</th>
            <th>Código</th>
            <th>Precio</th>
            <th>Estatus</th>
            <th>Stock</th>
            <th>Categoria</th>
            <th>Imagenes</th>
        </tr>
    
    {{#if listProducts.length}}
        {{#each listProducts}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.code}}</td>
                <td>${{this.price}}</td>
                {{#if this.status}}
                    <td class="green">Activo</td>
                {{else}}
                    <td class="red">Inactivo</td>
                {{/if}}
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                {{#if this.thumbnails.length}}
                    <td>
                        {{#each this.thumbnails}}
                            {{this}}<br>
                        {{/each}}
                    </td>
                {{else}}
                    <td>&nbsp;</td>
                {{/if}}
            </tr>
        {{/each}}
    {{/if}}
    </table>
</div>